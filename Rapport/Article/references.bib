@Article{SturmJPROC2011,
  Title                    = {Waveform Design and Signal Processing Aspects for Fusion of Wireless Communications and Radar Sensing},
  Author                   = {C. Sturm and W. Wiesbeck},
  Journal                  = {Proceedings of the IEEE},
  Year                     = {2011},

  Month                    = {July},
  Number                   = {7},
  Pages                    = {1236-1259},
  Volume                   = {99},

  Abstract                 = {Since traditional radar signals are “unintelligent,” regarding the amount of information they convey on the bandwidth they occupy, a joint radar and wireless communication system would constitute a unique platform for future intelligent transportation networks effecting the essential tasks of environmental sensing and the allocation of ad-hoc communication links, in terms of both spectrum efficiency and cost-effectiveness. In this paper, approaches to the design of intelligent waveforms, that are suitable for simultaneously performing both data transmission and radar sensing, are proposed. The approach is based on classical phase-coded waveforms utilized in wireless communications. In particular, requirements that allow for employing such signals for radar measurements with high dynamic range are investigated. Also, a variety of possible radar processing algorithms are discussed. Moreover, the applicability of multiple antenna techniques for direction-of-arrival estimation is considered. In addition to theoretical considerations, the paper presents system simulations and measurement results of complete “RadCom” systems, demonstrating the practical feasibility of integrated communications and radar applications.},
  Doi                      = {10.1109/JPROC.2011.2131110},
  File                     = {SturmJPROC2011.pdf:home/stephanie/Dropbox/radcom/bibliographie/SturmJPROC2011.pdf:PDF},
  ISSN                     = {0018-9219},
  Keywords                 = {ad hoc networks;antennas;direction-of-arrival estimation;radar signal processing;DOA estimation;RadCom systems;ad hoc communication links;classical phase-coded waveforms;cost-effectiveness;data transmission;direction-of-arrival estimation;integrated communications;intelligent transportation networks;intelligent waveforms;multiple antenna techniques;radar measurements;radar sensing;signal processing aspects;spectrum efficiency;waveform design;wireless communication system;Environmental factors;Intelligent transportation systems;OFDM;Radar signal processing;Sensors;Signal analysis;Wireless communication;ACC;MIMO;OFDM;RadCom;SRR;V2I;V2V;digital beam-forming;radar},
  Owner                    = {damien},
  Review                   = {Résumé Les auteurs investiguent la faisabilité d'utiliser la même forme d'onde pour assurer conjointement les fonctions radar et de communications dans le cadre applicatif des transports intelligents (sensing et communication entre véhicules). Tout d'abord, deux types de forme d'onde utilisée usuellement pour les communications (DSSS et OFDM) sont considérées et leur pertinence pour les fonctions radar sont étudiées. Des récepteurs radar (traitement) sont proposés pour chacune de ces deux formes d'onde. Le récepteur radar OFDM proposé est implanté et testé avec succès sur un scénario expérimental. Ensuite, l'extension des deux traitements au cas d'un réseau d'antennes est étudié. Enfin, plusieurs critères de performance pour les fonctions radar et communication sont évalués numériquement sur des scénarios réalistes. Récepteur radar DSSS proposé : "correlator processor" \begin{itemize} \item corrélation temporelle sur la distance(compression distance), \item symbole non éliminé donc phénomène de corrélation interne des données résultant en des lobes-secondaires non-conventionnels (par rapport à une FFT), \item pas de compensation du Doppler dans le traitement pour ne pas augmenter la charge calculatoire donc possible perte si temps de traitement long \end{itemize} Récepteur radar OFDM proposé : "symbol-based processing" \begin{itemize} \item élimine d'abord les symboles reçus dans le domaine multiporteuse/temps-symbole puis somme en cohérence sur les deux dimensions par simlpe FFT-IFFT \item \end{itemize} Critères de choix d'une forme d'onde pour le radar \begin{itemize} \item Bonne propriété d'autocorrélation (bas niveau des lobes secondaires) \item Robustesse au bruit, interférences et multitrajets \begin{itemize} \item par exemple, dans un cas multiutilisateurs pour les communications étudier l'impact que les interférences (dues aux autres utilisateurs) ont sur le récepteur radar and en particulier comportement des interférences commun un bruit blanc est souhaitable \end{itemize} \item Discrétion \item Valeurs numériques des paramètres pour assurer des exigences en termes de \begin{itemize} \item résolution distance (e.g., dimensionnée par la bande instantanée) \item ambiguïté distance et/o vitesse (e.g., durée d'un temps symbole dans le cas OFDM) \end{itemize} \end{itemize} Criètres de choix d'une forme donde pour les communications \begin{itemize} \item Rythme symbole \item Taux d'erreur binaire \item Discrétion et protection des données \item Bonne propriété d'intercorrélation des codes pour une forme d'onde DSSS \item Valeurs numériques des paramètres pour assurer des exigences en terme de \begin{itemize} \item \end{itemize} \end{itemize} Questions/Notes \begin{itemize} \item De quel traitement découle (15) excatement ? \item Le modèle $A(mu,n)$ d'amplitude dans (13) est-il réaliste ? Si oui, la sommation cohérente proposée ensuite (une fois les symboles émis dégagés) ne sera pas parfaite car ne prenant pas en compte la dépendance en $mu$ et $n$ de $A$. \item La notion d'orthogonalité OFDM est citée deux fois page 1247 col1 et 1249 col1 sous deux conditions différentes. Est-ce la même notion du coup à chaque fois ? \item Au final le préfixe cyclique, ça correspond à. un temps perdu de transmission d'information ?. \end{itemize}},
  Timestamp                = {2016.04.13}
}

